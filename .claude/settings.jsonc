{
  "statusLine": {
    "type": "command",
    "command": "pnpx ccusage statusline"
  },
  "permissions": {
    "allow": [
      "mcp__serena__check_onboarding_performed", // プロジェクトのオンボーディングが完了しているかチェック
      "mcp__serena__onboarding", // プロジェクトのオンボーディングを実行
      "mcp__serena__list_dir", // ディレクトリの一覧を取得
      "mcp__serena__write_memory", // メモリに書き込み
      "mcp__serena__get_symbols_overview", // シンボルの概要を取得
      "mcp__serena__find_symbol" // シンボルを検索
    ],
    "deny": [
      "Bash(sudo:*)",
      "Bash(rm:*)",
      "Bash(rm -rf:*)",
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Read(.env.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(npm uninstall:*)",
      "Bash(npm remove:*)",
      "Bash(psql:*)",
      "Bash(mysql:*)",
      "Bash(mongod:*)",
      "mcp__supabase__execute_sql"
    ]
  }
}
